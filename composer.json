{
    "name": "josegonzalez/php-error-handlers",
    "description": "PHP Library that includes wrappers for popular error handling services",
    "keywords": ["cakephp", "error", "exception"],
    "homepage": "https://github.com/josegonzalez/php-error-handlers",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Diaz-Gonzalez",
            "email": "php+error-handlers@josediazgonzalez.com"
        }
    ],
    "require": {
        "cakephp/cakephp": "~3.0",
        "php": ">=7.0",
        "bugsnag/bugsnag": "2.*",
        "airbrake/phpbrake": "^0.0.11",
        "mindscape/raygun4php": "^1.6",
        "sentry/sentry": "^1.7.0",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "cakephp/cakephp-codesniffer": "dev-master",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Josegonzalez\\ErrorHandlers\\": "src",
            "Josegonzalez\\ErrorHandlers\\Test\\Fixture\\": "tests\\Fixture"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Josegonzalez\\ErrorHandlers\\Test\\": "tests"
        }
    }
}
